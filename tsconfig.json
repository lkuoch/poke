{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "es6",
    "target": "es5",
    "paths": {
      "@App/*": ["./src/App/*"],
      "@Assets/*": ["./src/Assets/*"],
      "@Components/*": ["./src/Components/*"],
      "@Config": ["./src/Config/poke.dev.json"],
      "@Containers/*": ["./src/Containers/*"],
      "@Content/*": ["./src/Content/*"],
      "@Middlewares/*": ["src/Middlewares/*"],
      "@Mock/*": ["./src/Mock/*"],
      "@Services/*": ["./src/Services/*"],
      "@Shared/*": ["./src/Shared/*"],
      "@Styles/*": ["./src/Styles/*"],
      "__Types__": ["src/@Types/index.d.ts"],
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
